{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Schema for html data",
  "type": "object",
  "default": {},
  "additionalProperties": false,
  "definitions": {
    "parentTags": {
      "description": "The element is only allowed as a child of those parent elements",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "The name of the parent tag"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "category": {
                "description": "The category of the parent tag",
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "reference": {
      "description": "Reference for additional information",
      "type": "object",
      "required": ["url", "name"],
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "description": "Url of the reference"
        },
        "name": {
          "type": "string",
          "description": "Name of the reference"
        }
      }
    },
    "attributes": {
      "type": "object",
      "description": "Attributes of the element",
      "patternProperties": {
        ".*": {
          "description": "Attribute name",
          "oneOf": [
            {
              "type": "object",
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "description": "Reference to a definition"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "reference": {
                  "$ref": "#/definitions/reference"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is required"
                },
                "experimental": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is experimental"
                },
                "deprecated": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is deprecated"
                },
                "description": {
                  "type": "string",
                  "description": "Description for the attribute"
                },
                "options": {
                  "type": "object",
                  "description": "Options for the enum value",
                  "additionalProperties": false,
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "The option",
                      "properties": {
                        "description": {
                          "type": "string",
                          "description": "Description for the option"
                        },
                        "deprecated": {
                          "type": "boolean",
                          "description": "Whether or not the option is deprecated"
                        },
                        "experimental": {
                          "type": "boolean",
                          "description": "Whether or not the option is experimental"
                        }
                      }
                    }
                  }
                },
                "suggest": {
                  "type": "string",
                  "description": "suggested value of the attribute"
                },
                "type": {
                  "description": "type of the attribute",
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "url",
                    "lang",
                    "enum",
                    "boolean",
                    "number"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  },
  "properties": {
    "__meta__": {
      "description": "Optional meta data about this configuration (comments etc.)"
    },
    "extends": {
      "type": "array",
      "description": "Extend other configurations",
      "items": {
        "type": "string"
      }
    },
    "definitions": {
      "description": "Custom definitions",
      "type": "object",
      "required": ["attributes"],
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "$ref": "#/definitions/attributes"
        }
      }
    },
    "globalAttributes": {
      "$ref": "#/definitions/attributes"
    },
    "snippets": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".*": {
          "description": "Snippet",
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "object",
      "default": {},
      "description": "HTML Elements",
      "patternProperties": {
        "^-.*": {
          "description": "Removed tag name",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        ".*": {
          "description": "Tag name",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "reference": {
              "$ref": "#/definitions/reference"
            },
            "experimental": {
              "type": "boolean",
              "description": "Whether or not the element is experimental"
            },
            "deprecated": {
              "type": "boolean",
              "description": "Whether or not the element is deprecated"
            },
            "description": {
              "type": "string",
              "description": "Description for the element"
            },
            "markdownDescription": {
              "type": "string",
              "description": "Markdown description for the element"
            },
            "selfClosing": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not the element is self-closing"
            },
            "newline": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not there should be a new line when this tag is inserted"
            },
            "disallowedParentTags": {
              "$ref": "#/definitions/parentTags",
              "description": "Disallowed parent tags"
            },
            "allowedParentTags": {
              "$ref": "#/definitions/parentTags",
              "description": "Allowed parent tags"
            },
            "allowedSubTags": {
              "description": "Allowed child elements",
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "This element is allowed"
                  },
                  {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "category": {
                        "description": "All elements with this category are allowed",
                        "type": "string"
                      }
                    }
                  }
                ]
              }
            },
            "categories": {
              "type": "array",
              "description": "A list of categories that this element belongs to.",
              "items": {
                "type": "string"
              }
            },
            "attributes": {
              "$ref": "#/definitions/attributes"
            }
          }
        }
      }
    }
  }
}
