{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for html data",
  "type": "object",
  "default": {},
  "additionalProperties": false,
  "properties": {
    "$comment": {
      "type": "string",
      "description": "Optional comment about this file"
    },
    "extends": {
      "type": "array",
      "description": "Extend other configurations",
      "items": {
        "type": "string"
      }
    },
    "elements": {
      "type": "object",
      "default": {},
      "description": "HTML Elements",
      "patternProperties": {
        "-.*": {
          "description": "Removed tag name",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        ".*": {
          "description": "Tag name",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "experimental": {
              "type": "boolean"
            },
            "deprecated": {
              "type": "boolean"
            },
            "description": {
              "type": "string",
              "description": "Description for the element"
            },
            "markdownDescription": {
              "type": "string",
              "description": "Markdown description for the element"
            },
            "selfClosing": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not the element is self-closing"
            },
            "newline": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not there should be a new line when this tag is inserted"
            },
            "allowedChildren": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "category": {
                    "type": "string",
                    "enum": ["flow content"]
                  }
                }
              }
            },
            "categories": {
              "type": "array",
              "description": "A list of categories that this element belongs to.",
              "items": {
                "type": "string"
              }
            },
            "attributes": {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "required": {
                      "type": "boolean"
                    },
                    "experimental": {
                      "type": "boolean"
                    },
                    "deprecated": {
                      "type": "boolean"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description for the attribute"
                    },
                    "options": {
                      "type": "object",
                      "patternProperties": {
                        ".*": {
                          "type": "object",
                          "properties": {
                            "description": {
                              "type": "string",
                              "description": "description for the option"
                            }
                          }
                        }
                      }
                    },
                    "suggest": {
                      "type": "string",
                      "description": "suggested value"
                    },
                    "type": {
                      "description": "type",
                      "type": "string",
                      "enum": [
                        "string",
                        "integer",
                        "url",
                        "lang",
                        "enum",
                        "boolean",
                        "number"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
