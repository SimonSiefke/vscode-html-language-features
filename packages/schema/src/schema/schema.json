{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for html data",
  "type": "object",
  "default": {},
  "additionalProperties": false,
  "definitions": {
    "reference": {
      "description": "Reference for additional information",
      "type": "object",
      "required": ["url", "name"],
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "description": "Url of the reference"
        },
        "name": {
          "type": "string",
          "description": "Name of the reference"
        }
      }
    },
    "attributes": {
      "type": "object",
      "description": "Attributes of the element",
      "patternProperties": {
        ".*": {
          "description": "Attribute name",
          "oneOf": [
            {
              "type": "object",
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "description": "Reference to a definition"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "reference": {
                  "$ref": "#/definitions/reference"
                },
                "probability": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "The probability of this attribute"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is required"
                },
                "experimental": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is experimental"
                },
                "deprecated": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is deprecated"
                },
                "description": {
                  "type": "string",
                  "description": "Description for the attribute"
                },
                "options": {
                  "type": "object",
                  "description": "Options for the enum value",
                  "additionalProperties": false,
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "The option",
                      "properties": {
                        "description": {
                          "type": "string",
                          "description": "Description for the option"
                        },
                        "probability": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 1,
                          "description": "Probability of the option"
                        }
                      }
                    }
                  }
                },
                "suggest": {
                  "type": "string",
                  "description": "suggested value of the attribute"
                },
                "type": {
                  "description": "type of the attribute",
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "url",
                    "lang",
                    "enum",
                    "boolean",
                    "number"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  },
  "properties": {
    "__meta__": {
      "description": "Optional meta data about this configuration (comments etc.)"
    },
    "extends": {
      "type": "array",
      "description": "Extend other configurations",
      "items": {
        "type": "string"
      }
    },
    "definitions": {
      "description": "Custom definitions",
      "type": "object",
      "required": ["attributes"],
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "$ref": "#/definitions/attributes"
        }
      }
    },
    "globalAttributes": {
      "$ref": "#/definitions/attributes"
    },
    "elements": {
      "type": "object",
      "default": {},
      "description": "HTML Elements",
      "patternProperties": {
        "^-.*": {
          "description": "Removed tag name",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        ".*": {
          "description": "Tag name",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "reference": {
              "$ref": "#/definitions/reference"
            },
            "experimental": {
              "type": "boolean",
              "description": "Whether or not the element is experimental"
            },
            "deprecated": {
              "type": "boolean",
              "description": "Whether or not the element is deprecated"
            },
            "description": {
              "type": "string",
              "description": "Description for the element"
            },
            "markdownDescription": {
              "type": "string",
              "description": "Markdown description for the element"
            },
            "selfClosing": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not the element is self-closing"
            },
            "newline": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not there should be a new line when this tag is inserted"
            },
            "allowedChildren": {
              "description": "Allowed child elements",
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                ".*": {
                  "description": "Name of the child element",
                  "type": "object",
                  "properties": {
                    "probability": {
                      "description": "The probability that this element is a child element of the element",
                      "type": "number",
                      "minimum": 0,
                      "maximum": 1
                    }
                  }
                }
              }
            },
            "categories": {
              "type": "array",
              "description": "A list of categories that this element belongs to.",
              "items": {
                "type": "string"
              }
            },
            "attributes": {
              "$ref": "#/definitions/attributes"
            }
          }
        }
      }
    }
  }
}
