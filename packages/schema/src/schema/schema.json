{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for html data",
  "type": "object",
  "default": {},
  "additionalProperties": false,
  "definitions": {
    "attributes": {
      "type": "object",
      "description": "Attributes of the element",
      "patternProperties": {
        ".*": {
          "oneOf": [
            {
              "type": "object",
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "description": "Reference to a definition"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "required": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is required"
                },
                "experimental": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is experimental"
                },
                "deprecated": {
                  "type": "boolean",
                  "description": "Whether or not the attribute is deprecated"
                },
                "description": {
                  "type": "string",
                  "description": "Description for the attribute"
                },
                "options": {
                  "type": "object",
                  "description": "Options for the enum value",
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "type": "string",
                          "description": "description for the option"
                        }
                      }
                    }
                  }
                },
                "suggest": {
                  "type": "string",
                  "description": "suggested value of the attribute"
                },
                "type": {
                  "description": "type of the attribute",
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "url",
                    "lang",
                    "enum",
                    "boolean",
                    "number"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  },
  "properties": {
    "$comment": {
      "type": "string",
      "description": "Optional comment about this file"
    },
    "extends": {
      "type": "array",
      "description": "Extend other configurations",
      "items": {
        "type": "string"
      }
    },
    "definitions": {
      "description": "Custom definitions",
      "type": "object",
      "required": ["attributes"],
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "$ref": "#/definitions/attributes"
        }
      }
    },
    "elements": {
      "type": "object",
      "default": {},
      "description": "HTML Elements",
      "patternProperties": {
        "-.*": {
          "description": "Removed tag name",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        ".*": {
          "description": "Tag name",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "reference": {
              "type": "object",
              "required": ["url", "name"],
              "additionalProperties": false,
              "properties": {
                "url": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              }
            },
            "experimental": {
              "type": "boolean",
              "description": "Whether or not the element is experimental"
            },
            "deprecated": {
              "type": "boolean",
              "description": "Whether or not the element is deprecated"
            },
            "description": {
              "type": "string",
              "description": "Description for the element"
            },
            "markdownDescription": {
              "type": "string",
              "description": "Markdown description for the element"
            },
            "selfClosing": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not the element is self-closing"
            },
            "newline": {
              "type": "boolean",
              "default": false,
              "description": "Whether or not there should be a new line when this tag is inserted"
            },
            "allowedChildren": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "category": {
                    "type": "string",
                    "enum": ["flow content"]
                  }
                }
              }
            },
            "categories": {
              "type": "array",
              "description": "A list of categories that this element belongs to.",
              "items": {
                "type": "string"
              }
            },
            "attributes": {
              "$ref": "#/definitions/attributes"
            }
          }
        }
      }
    }
  }
}
