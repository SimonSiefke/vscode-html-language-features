{
  "name": "typescript-composite-lerna",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "tsc -b --watch",
    "build": "tsc -b",
    "postinstall": "lerna bootstrap && tsc -b",
    "clean": "",
    "test": "cd packages/html-language-service && npm test && cd ../../ && cd packages/schema && npm test && cd ../../ && cd packages/facts-generator && npm test",
    "bundle": "npm run clean && npm run bundle:client && npm run bundle:server",
    "bundle:client": "webpack --mode production --config ./webpack/client.webpack.config.js",
    "bundle:server": "webpack --mode production --config ./webpack/server.webpack.config.js",
    "bundlesize": "bundlesize",
    "package": "rimraf dist && npm run bundle && node scripts/package.js && npm run bundlesize && cd dist && vsce package",
    "e2e": "cd packages/extension && npm run e2e",
    "publish:extensionPack": "cd packages/extension-pack && npx vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "bundlesize": "^0.18.0",
    "fs-extra": "^8.1.0",
    "lerna": "^3.18.4",
    "merge-options": "^2.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.30",
    "semantic-release-vsce": "^2.2.8",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.0",
    "typescript": "^3.8.0-dev.20191029",
    "webpack": "^5.0.0-beta.1",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10"
  },
  "renovate": {
    "extends": "bitworkers"
  },
  "bundlesize": [
    {
      "path": "./dist/packages/extension/dist/extensionMain.js",
      "maxSize": "80 kB",
      "compression": "none"
    },
    {
      "path": "./dist/packages/extension/dist/vscode-dependencies.js",
      "maxSize": "180 kB",
      "compression": "none"
    },
    {
      "path": "./dist/packages/html-language-server/dist/vscode-dependencies.js",
      "maxSize": "90 kB",
      "compression": "none"
    },
    {
      "path": "./dist/packages/html-language-server/dist/json-stats.js",
      "maxSize": "530 kB",
      "compression": "none"
    },
    {
      "path": "./dist/packages/html-language-server/dist/htmlLanguageServerMain.js",
      "maxSize": "70 kB",
      "compression": "none"
    }
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  }
}
